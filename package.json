{
  "name": "@sillvva/search",
  "version": "0.2.0",
  "description": "A parser and analyzer for advanced search queries, supporting tokenization, abstract syntax tree generation, and condition extraction.",
  "keywords": [
    "search",
    "query",
    "filter",
    "parser",
    "analyzer",
    "tokenization",
    "ast",
    "database",
    "orm"
  ],
  "author": "Matt DeKok",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "link": "pnpm build && pnpm link",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sillvva/sillvva-search.git",
    "directory": "."
  },
  "bugs": {
    "url": "https://github.com/sillvva/sillvva-search/issues"
  },
  "homepage": "https://github.com/sillvva/sillvva-search#readme",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./json": {
      "types": "./dist/json.d.mts",
      "default": "./dist/json.mjs"
    },
    "./drizzle": {
      "types": "./dist/drizzle.d.mts",
      "default": "./dist/drizzle.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "drizzle-orm": ">=1.0.0-beta.1"
  },
  "peerDependenciesMeta": {
    "drizzle-orm": {
      "optional": true
    }
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.11.0"
}
